{# templates/blog/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}All articles{% endblock %}

{% block body %}
    <h1>All articles from article s table : </h1>
    {% for article in articles %}
        <div>
            <h2>{{ loop.index }} / {{ article.title }} - Category : <a href="{{ path('blog_category', {'name': article.category.name }) }}">{{ article.category.name }}</a></h2>
            <p>{{ article.content }}</p>
        </div>
    {% else %}
        Aucun article trouv√©.
    {% endfor %}
    <a href="{{ path('app_index') }}">
        Back to homepage.
    </a>

    {{ form_start(form) }}
    {{ form_row(form.searchField) }}
    <button type="submit" name="btnSearch">Rechercher</button>
    {{ form_end(form) }}

    {{ form_start(formCategory) }}
    {{ form_row(formCategory.name) }}
    <button type="submit" name="name">Name</button>
    {{ form_end(formCategory) }}
{% endblock %}